{
  "thresholds": {
    "group": {
      "notice": 300,
      "warning": 500,
      "critical": 800,
      "description": "Groups accumulate fast, clean early"
    },
    "dm": {
      "notice": 500,
      "warning": 1000,
      "critical": 1500,
      "description": "Direct messages, more lenient"
    },
    "main": {
      "notice": 1000,
      "warning": 2000,
      "critical": 3000,
      "description": "Main session, most lenient"
    }
  },
  "summarization": {
    "group": {
      "extractChannelMemory": true,
      "captureParticipants": true,
      "captureDynamics": true,
      "extractActionItems": true,
      "extractDecisions": true,
      "learnFromInteraction": true
    },
    "dm": {
      "capturePerson": true,
      "extractActionItems": true,
      "extractDecisions": true,
      "capturePreferences": true,
      "learnFromInteraction": true
    },
    "main": {
      "extractToMemory": true,
      "captureLearnings": true,
      "updateKnowledge": true
    }
  },
  "learning": {
    "trackPatterns": [
      "communication_style",
      "response_effectiveness",
      "misunderstandings",
      "successful_interactions",
      "failed_attempts",
      "user_preferences",
      "context_clues"
    ],
    "updateFiles": [
      "memory/session-learning.md",
      "MEMORY.md",
      "memory/channels/{channel}.md"
    ]
  }
}
